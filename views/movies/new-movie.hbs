<h2>New Movie</h2>

<form method="POST" action="/movies/create">
  <label>
    Title
  </label>
  <input type="text" name="title" />
  <br />
  <label>
    Genre
  </label>
  <input type="text" name="genre" />
  <br />
  <label>
    Plot
  </label>
  <input type="text" name="plot" />
  <br />
  <label>
    Cast
  </label>
  <select name="cast" id="cast">
    {{#each celebrities}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <br />
  <button type="submit">Submit</button>
</form>